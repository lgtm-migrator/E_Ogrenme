@using EOgrenme.Models
@model EOgrenme.Entities.Share

@{
    ViewBag.Title = "Create";
}

    <div class="container-fluid">
        <div class="col-md-1 col-lg-1 col-xs-1 col-sm-1">
        </div>
        <div class="col-md-11 col-lg-11 col-xs-11 col-sm-11">
            <label><h1><t /><t />Ses Paylaş</h1></label>
        </div>

    </div>
    <div class="container-fluid">
        <div class="col-md-4 col-lg-4 col-xs-4 col-sm-4">
            <div class="row">
                <div class="col-md-12 col-md-offset-2">
                    <div class="form-horizontal">
                        <hr />
                        <div class="form-group">
                            <div class="col-md-12">
                                <img class="img-responsive" src="~/Images/default/gif/m-mic2.gif">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8 col-lg-8 col-xs-8 col-sm-8">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">

                    @using (Html.BeginForm("SoundUpload", "Share", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <hr />
                            @Html.ValidationSummary(false)
                            <div class="form-group">
                                <div class="col-md-4">
                                    <label>Ders Ismini Yazınız</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Course.CourseName, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-4">
                                    <label>Düşüncelerinizi Yazınız</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.ShareText, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-4">
                                    <label>Ses Seçiniz</label>
                                </div>
                                <div class="col-md-8">
                                    <input type="file" name="sound" id="sound" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-8">
                                    <button type="submit" class="btn btn-success">
                                        <span class="fa fa-plus"><i class="glyphicon glyphicon-send"></i> Paylaş</span>
                                    </button>
                                    <a href="@Url.Action("Index", "Home")" type="button" class="btn btn-success"><i class="glyphicon glyphicon-home"></i> Ana Sayfa</a>
                                 </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

