                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Ders Ismi" id="status1" value="@ViewData["deneme"]" />
                    </div>

                    <div class="form-group">
                        <textarea class="form-control" placeholder="Ders Paylaşımı Yap.." id="status"></textarea>
                    </div>

                    <div class="form-group">
                        <div class="col-md-4">
                            <label>Resim Seçiniz</label>
                        </div>
                        <div class="col-md-8">
                            <input type="file" name="image" id="MyImage" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-8">
                            <button type="submit" class="btn btn-success" id="btnPost">
                                 Paylaş
                            </button>
                       </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


<script>


    $("#btnPost").click(function () {
        var Share = $("#status1").val();
        var Ad = $("#status1").val();
        var x = document.getElementById("MyImage");
        alert(Ad);
        $.ajax({
            url: "/Share/ShareShare",
            method: "POST",
            data: {
                ShareText: Share,
                image: x,
                ad: Ad

            }
        }).done(function (data) {
            if (data.result) {
                load("/Home/Index");
            }
            else {

            }
        }).fail(function () {

        });
    });
</script>




